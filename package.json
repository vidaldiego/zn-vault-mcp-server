{
  "name": "@zincapp/znvault-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for ZN-Vault secrets management - enables AI assistants to securely access secrets",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "znvault-mcp": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "vault",
    "secrets",
    "znvault",
    "claude",
    "ai"
  ],
  "author": "ZincApp SL",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zincware/zn-vault.git",
    "directory": "zn-vault-mcp-server"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.5.0",
    "@zincapp/znvault-sdk": "^1.5.3",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^20.17.0",
    "tsup": "^8.3.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  }
}
